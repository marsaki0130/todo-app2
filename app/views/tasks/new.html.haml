.container
  %p.header_text
  .border_line
  %h2 New Card
  = form_with(model: @task,url: board_tasks_path(@task.board), method: 'post',local: true) do |f| 
    %div
      = f.label :eyecatch, 'アイキャッチ'
    %div
      = f.file_field :eyecatch
    %div
      = f.label :title, 'タイトル'
    %div
      = f.text_field :title, class: 'text'
    %div
      = f.label :content, '概要'
    %div
      = f.text_area :content, class: 'board-area'
    = f.submit '保存' ,class: 'btn-primary'