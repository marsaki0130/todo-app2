.container
  %p.header_text
  .border_line
  %h2 New Board
  = form_with(model: @board,url: boards_path, method: 'post',local: true) do |f| 
    %div
      = f.label :name, 'タイトル'
    %div
      = f.text_field :name, class: 'text'
    %div
      = f.label :description, '概要'
    %div
      = f.text_area :description, class: 'board-area'
    = f.submit '保存' ,class: 'btn-primary'